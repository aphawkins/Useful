    ViewData["Title"] = "Cryptography";
    ViewData["Message"] = "Select your cipher:";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<select>
    <option value="reverse">Reverse</option>
    <option value="pad">Pad</option>
</select>

<form method="post">
    <fieldset>
        @*<legend>Add Customer</legend>*@
        <div>
            <label for="Plaintext">Plaintext:</label>
            <input type="text" name="Plaintext" value="" />
        </div>
        <div>
            <label for="cipherText">Ciphertext:</label>
            <input type="text" name="Ciphertext" value="" />
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Encrypt" class="Encrypt" />
        </div>
    </fieldset>
</form>